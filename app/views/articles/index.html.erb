<h1>Lesson of the day</h1>

<%= link_to 'New article', new_article_path, class: 'primary-button' %>
<table>
  <tr>
    <th id="title-column">Title</th>
    <th id="text-column">Text</th>
  </tr>

  <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= link_to 'Show', article_path(article), class: 'secondary-button' %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: 'secondary-button' %></td>
        <td><%= link_to 'Back', articles_path, class: 'secondary-button' %></td>
        <td><%= link_to 'Destroy', article_path(article),
                        method: :delete,
                        data: {confirm: 'Are you sure?'},
                        class: 'secondary-button'
        %></td>
      </tr>
  <% end %>
</table>