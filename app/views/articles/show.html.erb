<div class="main-content">

  <h1>
    <%= @article.title %>
  </h1>

  <p>
    <%= @article.text %>
  </p>


  <h2>Comments</h2>
  <%= render @article.comments %>

  <h2>Add a comment:</h2>
  <%= render 'comments/form' %>

  <%= link_to 'Edit', edit_article_path(@article), class: 'secondary-button' %> |
  <%= link_to 'Back', articles_path, class: 'secondary-button' %>


</div>